# Polymorph-4 Environment Configuration

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Security
JWT_SECRET_KEY=your-secret-key-here-change-this
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_NAME=System Administrator

# Database
DATABASE_URL=sqlite:///data/audit.db

# Hardware Configuration  
DAQ_BACKEND=simulator
RAMAN_PROVIDER=simulator

# NI DAQ Settings (if using NI hardware)
NI_DEVICE_NAME=Dev1
NI_AO_CHANNEL=ao0
NI_AI_CHANNEL=ai0

# Red Pitaya Settings (if using Red Pitaya)
REDPITAYA_HOST=192.168.1.100
REDPITAYA_PORT=5000

# Safety Settings
ESTOP_LINE=0
DOOR_LINE=1
WATCHDOG_SECONDS=2.0

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090
GRAFANA_PORT=3000

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/ssl/certs/polymorph4.crt
SSL_KEY_PATH=/etc/ssl/private/polymorph4.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30