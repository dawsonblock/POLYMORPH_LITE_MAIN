# POLYMORPH-LITE Staging Environment Configuration

# Environment
ENVIRONMENT=staging

# Database (PostgreSQL for staging)
DATABASE_URL=postgresql://polymorph:${DB_PASSWORD}@postgres:5432/polymorph_staging
DATABASE_POOL_SIZE=20

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Security (Replace with actual secrets)
SECRET_KEY=${SECRET_KEY}
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_EXPIRATION_MINUTES=120

# RSA Keys for E-Signatures
RSA_PRIVATE_KEY_PATH=/app/secrets/private.pem
RSA_PUBLIC_KEY_PATH=/app/secrets/public.pem

# AI Service
AI_SERVICE_URL=http://ai-service:3000
AI_CIRCUIT_BREAKER_THRESHOLD=3
AI_CIRCUIT_BREAKER_TIMEOUT=60

# Data Directories
P4_DATA_DIR=/app/data
P4_CONFIG=/app/config/config.yaml

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=${SENTRY_DSN}

# Server
HOST=0.0.0.0
PORT=8001

# CORS
ALLOWED_ORIGINS=https://staging.polymorph.example.com

# Feature Flags
ENABLE_MFA=true
ENABLE_APPROVAL_WORKFLOW=true
ENABLE_AI_INFERENCE=true

# Performance
DATABASE_POOL_SIZE=20
MAX_CONCURRENT_WORKFLOWS=50

# Observability
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9090
