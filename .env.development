# POLYMORPH-LITE Development Environment Configuration

# Environment
ENVIRONMENT=development

# Database (SQLite for local dev)
DATABASE_URL=sqlite:///data/polymorph.db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security (Development keys - DO NOT use in production!)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production
JWT_EXPIRATION_MINUTES=480

# RSA Keys for E-Signatures
RSA_PRIVATE_KEY_PATH=./config/private.pem
RSA_PUBLIC_KEY_PATH=./config/public.pem

# AI Service
AI_SERVICE_URL=http://localhost:3000
AI_CIRCUIT_BREAKER_THRESHOLD=3
AI_CIRCUIT_BREAKER_TIMEOUT=60

# Data Directories
P4_DATA_DIR=./data
P4_CONFIG=./config/config.yaml

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console
SENTRY_DSN=

# Server
HOST=0.0.0.0
PORT=8001

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost,http://127.0.0.1:3000

# Feature Flags
ENABLE_MFA=false
ENABLE_APPROVAL_WORKFLOW=true
ENABLE_AI_INFERENCE=true

# Performance
DATABASE_POOL_SIZE=5
MAX_CONCURRENT_WORKFLOWS=10
